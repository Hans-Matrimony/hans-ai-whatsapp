# ==========================================
# Hans AI WhatsApp Webhook - Environment Variables
# ==========================================

# WhatsApp Meta API Configuration
WHATSAPP_VERIFY_TOKEN=your-random-verify-token-here
WHATSAPP_PHONE_ID=your-phone-id-from-meta
WHATSAPP_ACCESS_TOKEN=your-access-token-from-meta
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# WhatsApp Business Number (E.164 format, without +)
WHATSAPP_PHONE_NUMBER=919999999999

# OpenClaw Gateway Configuration
OPENCLAW_URL=http://openclaw:8000
OPENCLAW_API_KEY=optional-api-key-for-openclaw
OPENCLAW_TIMEOUT=60

# Message Processing
MESSAGE_TIMEOUT=30
MAX_MESSAGE_LENGTH=4096
ENABLE_MESSAGE_QUEUE=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Redis (for message queue)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGINS=*

# Features
ENABLE_MEDIA_HANDLING=true
ENABLE_INTERACTIVE_MESSAGES=true
ENABLE_MESSAGE_STATUS=false

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1
